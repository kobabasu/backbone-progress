@import '../lib/nib'
@import '../../themes/css/stylus/swing'

$bg       = white
$fadeout  = .5s

.pageOut
  opacity 0
  transition opacity $fadeout ease-in

body>*:not(#progress)
  opacity 0

#progress
  background-color $bg
  position fixed
  content ""
  top 0
  left 0
  width 100%
  height 100%
  z-index 100
